<h1>Pirate</h1>
<form method="post" label="pirate" action="/pirates">
  <p><label for="pirate_name">Name </label>
  <input type="text" id="pirate_name" name="pirate[name]"></p>
  <p><label for="pirate_weight">Weight </label>
  <input type="text" id="pirate_weight" name="pirate[weight]"></p>
  <p><label for="pirate_height">Height </label>
  <input type="text" id="pirate_height" name="pirate[height]"></p>

  <p><label for="ship_name_1">Ship No. 1 Name </label>
  <input type="text" id="ship_name_1" name="pirate[ships][][name]"></p>
  <p><label for="ship_type_1">Ship No. 1 Type </label>
  <input type="text" id="ship_type_1" name="pirate[ships][][type]"></p>
  <p><label for="ship_booty_1">Ship No. 1 Booty </label>
  <input type="text" id="ship_booty_1" name="pirate[ships][][booty]"></p>

  <p><label for="ship_name_2">Ship No. 2 Name </label>
  <input type="text" id="ship_name_2" name="pirate[ships][][name]"></p>
  <p><label for="ship_type_2">Ship No. 2 Type </label>
  <input type="text" id="ship_type_2" name="pirate[ships][][type]"></p>
  <p><label for="ship_booty_2">Ship No. 2 Booty </label>
  <input type="text" id="ship_booty_2" name="pirate[ships][][booty]"></p>
  <input type="submit" value="Submit">
</form>
